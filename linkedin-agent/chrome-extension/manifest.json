{
  "manifest_version": 3,
  "name": "MVPeople - LinkedIn â†’ Vincere",
  "version": "1.0.0",
  "description": "Voeg LinkedIn kandidaten toe aan Vincere met AI verrijking",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "http://localhost:3002/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {}
}
